@model HPRSApp.Models.PatientViewModel

@{
    ViewData["Title"] = "AddNewPatient";
}

<h1>Add New Patient</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewPatient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
               <select asp-for="Gender" asp-items="ViewBag.Gender" class="form-control">
                   <option value="">--Select Gender--</option>
               </select>
            </div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddmissionDate" class="control-label"></label>
                <input asp-for="AddmissionDate" class="form-control" />
                <span asp-validation-for="AddmissionDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isDischarged" /> @Html.DisplayNameFor(model => model.isDischarged)
                </label>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add Patient" class="btn btn-primary" />
            </div>
        </form>
        <div class="form-group">
            @if (ViewBag.msg != null)
            {
                <p class="text-danger">@ViewBag.msg</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
